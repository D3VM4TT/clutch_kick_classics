{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}
<div class="md:w-1/3 w-full p-2">
    <div class="bg-white shadow-lg hover:shadow-xl rounded-lg ">
        {% include '@SyliusShop/Product/_mainImage.html.twig' with {'product': product} %}
        <div class="flex justify-between items-start px-2 pt-2">
            <div class="p-2 flex-grow">
                <a
                    href="{{ path('sylius_shop_product_show', {'slug': product.slug, '_locale': product.translation.locale}) }}"
                    class="font-medium text-xl font-poppins">
                    {{ product.name }}
                </a>
            </div>
            <div class="p-2 text-right">
                {% if not product.enabledVariants.empty() %}
                    <div class="text-teal-500 font-semibold text-lg font-poppins" {{ sylius_test_html_attribute('product-price') }}>{{ money.calculatePrice(product|sylius_resolve_variant) }}</div>
                {% endif %}
            </div>
        </div>
        <div class="flex px-2 pb-2">
            <div class="w-full text-center p-2">
                <a href="{{ path('sylius_shop_product_show', {'slug': product.slug, '_locale': product.translation.locale}) }}" class="block w-full bg-white hover:bg-gray-100 text-teal-500 border-2 border-teal-500 px-3 py-2 rounded uppercase font-poppins font-medium">
                    DETAILS
                </a>
            </div>
        </div>
    </div>
</div>