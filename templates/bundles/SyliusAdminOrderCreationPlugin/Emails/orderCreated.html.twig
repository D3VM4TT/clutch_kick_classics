{% extends '@SyliusCore/Email/layout.html.twig' %}

{% block subject %}
    {{ 'sylius_admin_order_creation.email.order_created.subject'|trans }}
{% endblock %}

{% block body %}
    {% autoescape false %}
        {% set logo = absolute_url(asset('assets/shop/img/logo_circ.png')) %}

        <div style="font-family: sans-serif; background: #eee; padding-top: 30px; padding-bottom: 30px; font-size: 16px; color: #333; line-height: 1.5">
            <div style="max-width: 600px; margin: 20px auto;">
                <div style="margin-bottom: 30px; text-align: center;">
                        <a href="https://clutchkickclassics.co.za">
                            <img src="{{ logo }}" alt="Clutch Kick Classics" style="width: 170px">
                        </a>
                </div>

                <div style="background: #fff; padding: 40px 30px;">
                    {% block content %}
                        <h3>Thank you</h3>

                        <p>Your order has been created.</p>

                        <p>Upon receiving payment you will receive a email your entry numbers.</p>
                    {% endblock %}
                </div>

                <div style="text-align: center; padding: 20px 0;">
                    <a href="https://clutchkickclassics.co.za" target="_blank" style="color: #1abb9c; text-decoration: none;">clutchkickclassics.co.za</a>
                </div>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}
